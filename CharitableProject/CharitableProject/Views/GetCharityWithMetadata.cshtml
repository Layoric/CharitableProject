@inherits ViewPage<GetCharityWithMetadataResponse>
<div class="panel">
    <h2 class="text-center">@Model.Metadata.Charity_Name</h2>
    <div class="panel-body">
        <table class="table">
            <tr>
                <td><strong>ABN</strong></td>
                <td>@Model.Metadata.ABN</td>
            </tr>
            <tr>
                <td><strong>Name</strong></td>
                <td>@Model.Metadata.Charity_Name</td>
            </tr>
            @if (!string.IsNullOrEmpty(@Model.Metadata.Other_Organisation_Names))
            {
                <tr>
                    <td><strong>Also Known As</strong></td>
                    <td>@Model.Metadata.Other_Organisation_Names</td>
                </tr>
            }

            @if (!string.IsNullOrEmpty(@Model.Result.Charity_Website))
            {
                <tr>
                    <td><strong>Website</strong></td>
                    <td><a href="@Model.Result.Charity_Website">@Model.Result.Charity_Website</a></td>
                </tr>
            }

            <tr>
                <td><strong>Country</strong></td>
                <td>@Model.Metadata.Country</td>
            </tr>
            <tr>
                <td><strong>Main Activity</strong></td>
                <td>@Model.Metadata.Main_Activity</td>
            </tr>
        </table>





        <table class="table table-striped table-bordered">
            <thead>Operates in States</thead>
            <tr>
                <td>ACT</td>
                <td>
                    @if (@Model.Metadata.Operates_in_ACT == "Y")
                    {
                        <span>✔</span>
                    }
                    else
                    {
                        <span>✗</span>
                    }
                </td>
            </tr>
            <tr>
                <td>NSW</td>
                <td>
                    @if (@Model.Metadata.Operates_in_NSW == "Y")
                    {
                        <span>✔</span>
                    }
                    else
                    {
                        <span>✗</span>
                    }
                </td>
            </tr>
            <tr>
                <td>VIC</td>
                <td>
                    @if (@Model.Metadata.Operates_in_VIC == "Y")
                    {
                        <span>✔</span>
                    }
                    else
                    {
                        <span>✗</span>
                    }
                </td>
            </tr>
            <tr>
                <td>QLD</td>
                <td>
                    @if (@Model.Metadata.Operates_in_QLD == "Y")
                    {
                        <span>✔</span>
                    }
                    else
                    {
                        <span>✗</span>
                    }
                </td>
            </tr>
            <tr>
                <td>SA</td>
                <td>
                    @if (@Model.Metadata.Operates_in_SA == "Y")
                    {
                        <span>✔</span>
                    }
                    else
                    {
                        <span>✗</span>
                    }
                </td>
            </tr>
            <tr>
                <td>WA</td>
                <td>
                    @if (@Model.Metadata.Operates_in_WA == "Y")
                    {
                        <span>✔</span>
                    }
                    else
                    {
                        <span>✗</span>
                    }
                </td>
            </tr>
            <tr>
                <td>NT</td>
                <td>
                    @if (@Model.Metadata.Operates_in_NT == "Y")
                    {
                        <span>✔</span>
                    }
                    else
                    {
                        <span>✗</span>
                    }
                </td>
            </tr>
            <tr>
                <td>TAS</td>
                <td>
                    @if (@Model.Metadata.Operates_in_TAS == "Y")
                    {
                        <span>✔</span>
                    }
                    else
                    {
                        <span>✗</span>
                    }
                </td>
            </tr>
        </table>
    </div>
</div>
<div>
    <table class="table table-striped table-bordered">
        @if (@Model.Result.Gay_Lesbian_Bisexual == "Y")
        {
            <tr>
                <td>Supports LGBT+</td>
                <td class="success"><span style="font-size: x-large; font-weight: bolder">🌈</span></td>
            </tr>
        }
        @if (@Model.Result.Women == "Y")
        {
            <tr>
                <td>Supports Women</td>
                <td class="success"><span style="font-size: x-large; font-weight: bolder">♀</span></td>
            </tr>
        }
        @if (@Model.Metadata.Animal_Protection == "Y")
        {
            <tr>
                <td>Supports Animal Protection</td>
                <td class="success"><span style="font-size: x-large; font-weight: bolder">🐶</span></td>
            </tr>
        }
        @if (@Model.Metadata.People_at_risk_of_homelessness == "Y")
        {
            <tr>
                <td>Homelessness prevention</td>
                <td class="success"><span style="font-size: x-large; font-weight: bolder">🏠</span></td>
            </tr>
        }
        @if (@Model.Metadata.Environmental_activities == "Y")
        {
            <tr>
                <td>Environmental activities</td>
                <td class="success"><span style="font-size: x-large; font-weight: bolder">🌲</span></td>
            </tr>
        }
        @if (@Model.Metadata.Income_support_and_maintenance == "Y")
        {
            <tr>
                <td>Income support</td>
                <td class="success"><span style="font-size: x-large; font-weight: bolder">💰</span></td>
            </tr>
        }
        @if (@Model.Metadata.Aboriginal_or_TSI == "Y")
        {
            <tr>
                <td>Supports Aboriginals or Torres Strait Islanders</td>
                <td class="success"><img src="https://upload.wikimedia.org/wikipedia/en/thumb/3/3f/Australian_Aboriginal_Flag.svg/320px-Australian_Aboriginal_Flag.svg.png" width="32" height="22"/></td>
            </tr>
        }
        @if (@Model.Metadata.Emergency_Relief == "Y")
        {
            <tr>
                <td>Emergency relief</td>
                <td class="success"><span class="glyphicon glyphicon-plus-sign"></span></td>
            </tr>
        }

    </table>


    <br>
    <br>


    <p style="font-size: small"><a href="/finddetails?abn=@Model.Metadata.ABN">Show raw data</a>
</div>