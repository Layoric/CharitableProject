@inherits ViewPage<GetCharityWithMetadataResponse>
<div class="panel">
    <h2 class="text-center">@Model.Metadata.Charity_Name</h2>
    <div class="panel-body">
        <table class="table">
            <tr>
                <td><strong>ABN</strong></td>
                <td>@Model.Metadata.ABN</td>
            </tr>
            <tr>
                <td><strong>Name</strong></td>
                <td>@Model.Metadata.Charity_Name</td>
            </tr>
            @if (!string.IsNullOrEmpty(@Model.Result.Charity_Website))
            {
                <tr>
                    <td><strong>Website</strong></td>
                    <td>@Model.Result.Charity_Website</td>
                </tr>
            }

            <tr>
                <td><strong>Country</strong></td>
                <td>@Model.Metadata.Country</td>
            </tr>
            <tr>
                <td><strong>Main Activity</strong></td>
                <td>@Model.Metadata.Main_Activity</td>
            </tr>
        </table>
    </div>
</div>
<div>
    <table class="table table-striped table-bordered">
        @if (@Model.Result.Gay_Lesbian_Bisexual == "Y")
        {
            <tr>
                <td>Supports LGBT+</td>
                <td class="success"><span style="font-size: x-large;font-weight: bolder">🌈</span></td>
            </tr>
        }
        @if (@Model.Result.Women == "Y")
        {
            <tr>
                <td>Supports Women</td>
                <td class="success"><span style="font-size: x-large;font-weight: bolder">♀</span></td>
            </tr>
        }
        @if (@Model.Metadata.Animal_Protection == "Y")
        {
            <tr>
                <td>Supports Animal Protection</td>
                <td class="success"><span style="font-size: x-large;font-weight: bolder">🐶</span></td>
            </tr>
        }
        @if (@Model.Metadata.People_at_risk_of_homelessness == "Y")
        {
            <tr>
                <td>Homelessness prevention</td>
                <td class="success"><span style="font-size: x-large;font-weight: bolder">🏠</span></td>
            </tr>
        }
        @if (@Model.Metadata.Environmental_activities == "Y")
        {
            <tr>
                <td>Environmental activities</td>
                <td class="success"><span style="font-size: x-large;font-weight: bolder">🌲</span></td>
            </tr>
        }
        @if (@Model.Metadata.Income_support_and_maintenance == "Y")
        {
            <tr>
                <td>Income support</td>
                <td class="success"><span style="font-size: x-large;font-weight: bolder">💰</span></td>
            </tr>
        }
        @if (@Model.Metadata.Aboriginal_or_TSI == "Y")
        {
            <tr>
                <td>Supports Aboriginals or Torres Strait Islanders</td>
                <td class="success"><img src="https://upload.wikimedia.org/wikipedia/en/thumb/3/3f/Australian_Aboriginal_Flag.svg/320px-Australian_Aboriginal_Flag.svg.png" width="32" height="22"/></td>
            </tr>
        }

    </table>
</div>